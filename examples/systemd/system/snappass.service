[Unit]
Description=Snappass Service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/usr/lib/snappass_el8/snappass-master
ExecStart=/home/user/snappass_venv/bin/gunicorn -w 4 -b 127.0.0.1:8000 snappass.main:app
Restart=always
Environment="FLASK_ENV=production"
Environment="PATH=/home/user/snappass_venv/bin"
Environment="NO_SSL=True"

[Install]
WantedBy=multi-user.target